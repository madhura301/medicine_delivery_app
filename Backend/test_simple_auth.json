{
  "info": {
    "_postman_id": "test-simple-auth",
    "name": "Test Simple Authorization",
    "description": "Simple test to check basic authorization",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Register Admin User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Registration successful', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    const jsonData = pm.response.json();",
              "    if (jsonData.token) {",
              "        pm.environment.set('auth_token', jsonData.token);",
              "        console.log('✅ Admin user registered and token set');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"firstName\": \"Admin\",\n    \"lastName\": \"User\",\n    \"email\": \"admin@test.com\",\n    \"password\": \"Admin@123\",\n    \"confirmPassword\": \"Admin@123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "register"]
        }
      },
      "response": []
    },
    {
      "name": "2. Test Basic Authentication",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Basic auth test', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "if (pm.response.code === 401) {",
              "    console.log('❌ 401 - Authentication failed');",
              "} else if (pm.response.code === 403) {",
              "    console.log('❌ 403 - Authorization failed (user authenticated but no permission)');",
              "} else if (pm.response.code === 200) {",
              "    console.log('✅ Authentication and authorization working');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/users",
          "host": ["{{base_url}}"],
          "path": ["api", "users"]
        }
      },
      "response": []
    }
  ]
}
